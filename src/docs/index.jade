extends ../_layouts/base

block config
	//- Correct base url pathing for this page
	- var baseUrl = '../'

block content

	include ../_layouts/header

	section.getting-started
		.container
			.row
				p Clone this repo using 
					code git clone https://github.com/mxstbr/react-boilerplate.git.
				p Delete the existing git repository by running 
					code rm -rf .git.
				p Initialize a new git repository with 
					code git init
					code git add
					code git commit -m "Initial commit".
				p Run npm install to install the dependencies.
					code npm install
				p Run npm start to start the local web server.
					code npm start
				p Go to http://localhost:3000 and you should see the app running!

	include ../_layouts/contribute
	include ../_layouts/footer
